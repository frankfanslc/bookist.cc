{
  "npm.packageManager": "yarn",
  "editor.formatOnSave": true,
  "prettier.requireConfig": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "files.exclude": {
    "**/.vs": true,
    "**/bin": true,
    "**/obj": true,
    "**/release": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/*.csproj.user": true
  }
}
